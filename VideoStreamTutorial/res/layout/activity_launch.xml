<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
             <ImageView
                     android:layout_width="fill_parent"
                     android:layout_height="wrap_content"
                     android:id="@+id/ivLogo"
                     android:background="@drawable/icon_app"
                     />
             <LinearLayout
                     android:orientation="vertical"
                     android:layout_width="fill_parent"
                     android:layout_height="wrap_content">
                     <TextView
                             android:layout_width="fill_parent"
                             android:layout_height="wrap_content"
                             android:id="@+id/activity_launcher_tvTitle1"
                             android:text="This is title"
                             android:textSize="@dimen/size_of_text_title"
                             android:layout_marginLeft="@dimen/size_of_text_title"/>
                 <TextView
                         android:layout_width="fill_parent"
                         android:layout_height="wrap_content"
                         android:id="@+id/activity_launcher_tvDescription1"
                         android:layout_marginTop="@dimen/margin_between_texts"
                         android:text="This is description"
                         android:textSize="@dimen/size_of_text_description"
                         android:layout_marginLeft="@dimen/size_of_text_title"/>
             </LinearLayout>

    <RelativeLayout
            android:orientation="vertical"
            android:layout_marginTop="@dimen/margin_between_texts"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/activity_launcher_tvTitle2"
                android:text="This is title"
                android:textSize="@dimen/size_of_text_title"
                android:layout_marginLeft="@dimen/size_of_text_title"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/activity_launcher_tvTitle2"
                android:id="@+id/activity_launcher_tvDescription2"
                android:layout_marginTop="@dimen/margin_between_texts"
                android:text="This is description"
                android:textSize="@dimen/size_of_text_description"
                android:layout_marginLeft="@dimen/size_of_text_title"/>
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ibtPurchase1"
                android:layout_alignParentRight="true"
                android:gravity="center"
                android:text="$ 0.99"/>
    </RelativeLayout>

    <RelativeLayout
            android:orientation="vertical"
            android:layout_marginTop="@dimen/margin_between_texts"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/activity_launcher_tvTitle3"
                android:text="This is title"
                android:textSize="@dimen/size_of_text_title"
                android:layout_marginLeft="@dimen/size_of_text_title"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/activity_launcher_tvTitle3"
                android:id="@+id/activity_launcher_tvDescription3"
                android:layout_marginTop="@dimen/margin_between_texts"
                android:text="This is description"
                android:textSize="@dimen/size_of_text_description"
                android:layout_marginLeft="@dimen/size_of_text_title"/>
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ibtPurchase2"
                android:layout_alignParentRight="true"
                android:gravity="center"
                android:text="$ 0.99"/>
    </RelativeLayout>

    <RelativeLayout
            android:orientation="vertical"
            android:layout_marginTop="@dimen/margin_between_texts"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/activity_launcher_tvTitle4"
                android:text="This is title"
                android:textSize="@dimen/size_of_text_title"
                android:layout_marginLeft="@dimen/size_of_text_title"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/activity_launcher_tvTitle4"
                android:id="@+id/activity_launcher_tvDescription4"
                android:layout_marginTop="@dimen/margin_between_texts"
                android:text="This is description"
                android:textSize="@dimen/size_of_text_description"
                android:layout_marginLeft="@dimen/size_of_text_title"/>
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ibtPurchase3"
                android:layout_alignParentRight="true"
                android:gravity="center"
                android:text="$ 0.99"/>
    </RelativeLayout>

</LinearLayout>